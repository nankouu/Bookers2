<div class = "container">
  <div class = "row">
    <div class ="col-xs-3" style>
      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
          <%= render 'books/relationship',user: @user%>
          <h3>name</h3>
          <p><%= @user.name %></p>
          <h3>introduction</h3>
           <p><%= @user.introduction%></p>

            <% if @user.id == current_user.id %>
                  <div class="row">
  　　　　<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/<%= current_user.id %>/edit"></a>
　　　　　</div>
            <% end %>
    <%= form_for(@book) do |f| %>

        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= error %></li>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <h3>New book</h3>
             <%= render 'books/form',book: @book%>
           
          <% end %>
    </div>
    <div class = "col-xs-9">
        <table class = "table table-striped">
            <h2>Books</h2>
            
          	<thead>
          		<tr>
                <th>Image</th>
          			<th>Title</th>
          			<th>Opinion</th>
          		</tr>
          	</thead>


          <tbody>
          	<% @user.books.each do |book| %>
          	 <tr>
                <td><%= link_to("/users/#{@user.id}") do%>
                <%= attachment_image_tag @user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                  <% end %>
                </td>
                <td><%= link_to(book.title,"/books/#{book.id}") %></td>
                <td><%= book.body %></td>
                <td>comment  <%= book.book_comments.count %></td>

            </tr>
         	<% end %>


          </tbody>
        </table>
    </div>
  </div>
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
</div>

