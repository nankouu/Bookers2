<div class = "container">
  <div class = "row">
	    <div class ="col-xs-3" style>
			<h2>User info</h2>
			        <%= attachment_image_tag @user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
			          <h3>name</h3>
			          <p><%= @user.name %></p>
			          <h3>introduction</h3>
			 <p><%= @user.introduction %></p>
	    </div>


        <div class = "col-xs-9">
			<table class = "table table-striped">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					<% @user.following_user.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%></td>
						<td><%= user.name %></td>
						<td><%= link_to 'show', user_path(user) %></td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
