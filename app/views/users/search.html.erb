<% if @user_or_book == "1"%>
<h2>User</h2>
    <table class = "table table-striped">

        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
            </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
            <tr>
                <td><%= attachment_image_tag user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%></td>
                <td><%= user.name %></td>
                <td><%=link_to("Show","/users/#{user.id}")%></td>
            </tr>
        </tbody>
        <% end %>
    </table>

<% elsif @user_or_book == "2" %>
    <h2>Book</h2>
    <table class = "table table-striped">
        <thead>
            <tr>
                <th>image</th>
                <th>title</th>
                <th>opinion</th>
            </tr>
        </thead>

    <% @books.each do |book| %>
        <tbody>
            <tr>
                <td><%= attachment_image_tag book.user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
            </tr>
        </tbody>
    <% end %>
    </table>
<% else %>
<% end %>