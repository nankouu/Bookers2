<div class = "container">
  <div class ="row">

<div class = "col-lg-4">
        <h2>User.info</h2>
        <%= attachment_image_tag @user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
          <h3>name</h3>
          <p><%= @user.name %></p>
          <h3>introduction</h3>
         <p><%= @user.introduction %></p>
         <% if @user.id == current_user.id %>
         <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-default" %>
         <% end %>

        <%= form_for(@book) do |f| %>

        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
              <h3>New Book</h3>
              <h4>Title</h4>
              <%= f.text_field :title %>
           
              <h4>Opinion</h4>
              <%= f.text_area :body %>
           
              <h4>
              <%= f.submit 'Create Book', class: "btn btn-default" %></h4>
           
          <% end %>
    </div>


    <div class = "col-lg-8">
      <div class="main users-index">
        <div class="container">
          <h1 class="users-heading">Users</h1>

            <table class = "table table-striped">
                <thead>
                  <tr>
                    <th>image</th>
                    <th>name</th>
                  </tr>
                </thead>


                <tbody>
                    <% @users.each do |user| %>
                      <div class="users-index-item">
                        <div class="user-right">
                          <tr>
                          <td><%= attachment_image_tag user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%></td>
                          <td><%= user.name %></td>
                          <td><%=link_to("Show","/users/#{user.id}")%></td>
                        </tr>
                        </div>
                      </div>
                    <% end %>
                </tbody>
          </table>
        </div>
      </div>
    </div>

