<div class = "container">
  <div class = "row">
          <div class ="col-lg-4" style>
                <h2>User.info</h2>
                        <%= attachment_image_tag @user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                          <h3>name</h3>
                          <p><%= @user.name %></p>
                          <h3>introduction</h3>
                 <p><%= @user.introduction %></p>

                <% if @user.id == current_user.id %>
                <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-default" %>
                <% end %>

                <h3>New Book</h3>
                <%= form_for(@book) do |f| %>

                  <% if @book.errors.any? %>
                    <div id="error_explanation" class="alert alert-danger">
                      <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                        <h4>Title</h4>
                        <%= f.text_field :title %>

                        <h4>Opinion</h4>
                        <%= f.text_area :body %>
                        <h4><%= f.submit 'Create Book', class: "btn btn-default" %></h4>

                    <% end %>
          </div>

            <div class = "col-lg-8">
            <table class = "table table-striped">

              <thead>
                <tr>
                  <th>image</th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>

              <tbody>


               <tr>
                 <td><%= attachment_image_tag @book.user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%></td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                <% if @book.user.id == current_user.id %>
                  <td><%= link_to("Edit","/books/#{@book.id}/edit")%></td>
                  <td><%= link_to("Destroy","/books/#{@book.id}", {method: "delete"})%>
                <% end %>
              </tr>

             </tbody>
           </table>
           </div>
      </div>
</div>