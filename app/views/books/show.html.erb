<div class = "container">
  <div class = "row">
          <div class ="col-xs-3" style>
                <h2>User info</h2>
                        <%= attachment_image_tag @book.user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                          <h3>name</h3>
                          <p><%= @book.user.name %></p>
                          <h3>introduction</h3>
                 <p><%= @book.user.introduction %></p>

                <div class="row">
        　　　　<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/<%= current_user.id %>"></a>
      　　　　　</div>

                <h3>New book</h3>
                <%= form_for(@book) do |f| %>

                  <% if @book.errors.any? %>
                    <div id="error_explanation" class="alert alert-danger">
                      <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                        <h4>Title</h4>
                        <%= f.text_field :title %>

                        <h4>Opinion</h4>
                        <%= f.text_area :body %>
                        <h4><%= f.submit 'Create Book', class: "btn btn-default" %></h4>

                    <% end %>
          </div>

            <div class = "col-xs-9">
              <h3>Book detail</h3>
            <table class = "table table-striped">

              <thead>
                <tr>
                  <th>image</th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>

              <tbody>

               <tr>
                 <td><%= link_to("/users/#{@book.user.id}") do%>
                  <%= attachment_image_tag @book.user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                  <%= @book.user.name %>
                    <% end %>
                  </td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                <% if @book.user.id == current_user.id %>
                  <td><%= link_to("Edit","/books/#{@book.id}/edit")%></td>
                  <td><%= link_to("Destroy","/books/#{@book.id}", {method: "delete"})%>
                <% end %>
              </tr>

             </tbody>
           </table>
           </div>
      </div>
      <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
</div>