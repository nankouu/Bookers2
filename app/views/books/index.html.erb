<% if flash[:notice]%>
<% end %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <h2>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class = "container">
    <div class = "row">
            <div class ="col-xs-3" style>
                    <h2>User info</h2>
                      <%= attachment_image_tag @user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                      <%= render 'relationship',user:@user %>
                      <h3>name</h3>
                      <p><%= @user.name %></p>
                      <h3>introduction</h3>
                      <p><%= @user.introduction %></p>

                      <% if @user.id == current_user.id %>
                      ã€€<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/<%= current_user.id %>/edit"></a>
                      <% end %>


                    <h3>New book</h3>
                      <%= render 'form',book: @book %>
            </div>

            <div class = "col-xs-9">
                  <table class = "table table-striped">

                      	<thead>
                      		<tr>
                            <th>Image</th>
                      			<th>Title</th>
                      			<th>Opinion</th>
                            <th></th>
                      		</tr>
                      	</thead>


                      <tbody>
                        	<% @books.each do |book| %>
                          	 <tr>
                               <td><%= link_to("/users/#{book.user.id}") do%>
                                          <%= attachment_image_tag book.user, :profile_image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg"%>
                                   <% end %></td>
                                <td><%= link_to(book.title,book_path(book)) %></td>
                                <td><%= book.body %></td>

                                <% if book.favorited_by?(current_user) %>
                                    <td><%= link_to book_favorites_path(book), method: :delete do %>
                                            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                                            <%= book.favorites.count %> </td>
                                        <% end %>

                                        <% else %>

                                    <td><%= link_to book_favorites_path(book), method: :post do %>
                                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                                            <%= book.favorites.count %> <i class="far fa-heart"></i>
                                        <% end %></td>
                                <% end %>

                                 <td>comments <%= book.book_comments.count %></td>
                              </tr>
                        	<% end %>
                      </tbody>
                  </table>
                      <div class="row">
                          <div class="col-xs-3 col-xs-offset-9">
                            <p>CopyRight Infratop.inc</p>
                          </div>
                      </div>
            </div>
    </div>
</div>